
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3" style="height: 100vh">
    <h2 class="index-heading">New Request</h2>
      <div class="form-group">
        <%= simple_form_for([@job, @request]) do |f| %>
        <%= f.input :date, class: "form-control" %>
        <%= f.input :duration, class: "form-control" %>
        <%= f.button :submit, "Send request", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
