<div class="container">
  <div class="row">
    <% @jobs.each do |job| %>
    <div class="col-xs-12 col-sm-4">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= job.category.photo %>');">
        <div class="card-description">
          <h4><%= job.title %></h4>
          <p><%= job.description %></p>
          <p><%= job.rate %> per hour </p>
        </div>
        <img class="card-user" src="https://kitt.lewagon.com/placeholder/users/tgenaitay">
        <%= link_to "", job_path(job.id), class: "card-link"%>
      </div>
    </div>
    <% end %>
  </div>
</div>

<div class="text-center">
  <%= link_to "Back to home", root_path, class: "btn btn-primary"%>
</div>
